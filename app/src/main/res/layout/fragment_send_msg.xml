<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SendMsgFragment">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <androidx.cardview.widget.CardView
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_marginLeft="17dp"
         android:layout_marginStart="160dp"
         android:layout_marginTop="40dp"
         app:cardCornerRadius="80dp"

         >

         <ImageView
             android:layout_width="match_parent"

             android:layout_height="104dp"
             android:src="@drawable/woman"

             />
     </androidx.cardview.widget.CardView>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Tell Anna how can you help her ! "
         android:layout_marginTop="20dp"
         android:textColor="#88000000"
         android:fontFamily="sans-serif"
         android:layout_gravity="center_horizontal"
         android:textSize="18sp"
         android:textStyle="bold" />



     <EditText
         android:id="@+id/subject"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="30dp"
         android:background="@drawable/custom_borders"
         android:gravity="top"
         android:hint="Subject..."
         android:inputType="text"
         android:overScrollMode="always"
         android:padding="15dp"
         android:scrollbarStyle="insideInset"
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         android:scrollbars="vertical" />

     <EditText
         android:id="@+id/shipper_field"
         android:layout_width="300dp"
         android:layout_height="200dp"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="30dp"
         android:background="@drawable/custom_borders"
         android:gravity="top"
         android:hint="Write your message .."
         android:inputType="textMultiLine"
         android:overScrollMode="always"
         android:padding="15dp"
         android:scrollbarStyle="insideInset"
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         android:scrollbars="vertical" />
     <Button
         android:id="@+id/btn_msg_sent"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="50dp"
         android:background="@drawable/button"
         android:fontFamily="sans-serif"
         android:letterSpacing="0.15"
         android:text="SEND"
         android:textAppearance="@style/TextAppearance.AppCompat.Small"
         android:textColor="#0BB0C0"
         android:textSize="18sp"
         android:textStyle="bold"
         android:typeface="monospace" />
 </LinearLayout>

</FrameLayout>