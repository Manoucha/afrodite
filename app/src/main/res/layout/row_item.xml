<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/perfume"
            android:layout_gravity="center_horizontal"
/>            <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/armata"
            android:text="COFFRET LANCOME"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:fontFamily="@font/annie_use_your_telescope"
            android:text="DAILY USE"
            android:textColor="#85AEAA"
            android:textSize="10dp"
            android:textStyle="bold"

            />
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttoncard"
            android:letterSpacing="0.2"

            android:text="SEE MORE"
            android:textColor="@color/white"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXCLUSIVEMENT"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/armata"
            android:textStyle="bold"
            android:textColor="#9285AEAA"
            android:layout_gravity="center_horizontal"

            android:letterSpacing="0.35"
            android:textSize="5dp"

            />

    </LinearLayout>
</androidx.cardview.widget.CardView>