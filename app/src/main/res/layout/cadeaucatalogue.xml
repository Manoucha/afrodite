<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:background="@drawable/cardproduct">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COFFRET LANCOME"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/armata"
            android:textStyle="bold"
            android:textSize="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:text="DAILY USE"
            android:fontFamily="@font/annie_use_your_telescope"
            android:textStyle="bold"
            android:textColor="#85AEAA"
            android:textSize="10dp"

            />

        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/buttoncard"
            android:text="GET IT NOW"
            android:layout_gravity="center_horizontal"

            android:textColor="@color/white"
            android:letterSpacing="0.2"
            android:textSize="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXCLUSIVEMENT"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/armata"
            android:textStyle="bold"
            android:textColor="#9285AEAA"
            android:layout_gravity="center_horizontal"

            android:letterSpacing="0.35"
            android:textSize="5dp"

            />
    </LinearLayout>

</LinearLayout>
