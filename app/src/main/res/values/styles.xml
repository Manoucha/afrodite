<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>
    <style name="ActiveText">
        <item name="android:textColor">#87B5B2</item>
    </style>
    <style name="InactiveText">
        <item name="android:textColor">#5D807E</item>
    </style>
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:spacing">0.35dp</item>
        <item name="android:textSize">13dp</item>
        <item name="color">#6C6E6E</item>

    </style>
    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="paddingStart">500dp</item>
        <item name="android:textColor">@color/bluee</item>
    </style>
</resources>